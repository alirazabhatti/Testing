<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">


    {% for block in section.blocks %}
    <div class="item {% if forloop.first %} active {% endif %}">
      <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.sliderimg | img_url: 'master' }}">
      <div class="carousel-caption">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.slidertext }}</p>
        <div class="custom-btn" style="left: {{ block.settings.position_hor }}%">
          <a href="{{ block.settings.cta_link }}" class="btn">{{ block.settings.text-cta }}</a>
        </div>
      </div>
      </a>
    </div>
    {% endfor %}

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<style>
  .carousel-indicators {
    display: none;
  }
  .custom-btn {
    position: absolute;
    left: {{ block.settings.position_hor }}%;
    top: {{ block.settings.position_ver }}%;
  }
</style>
{% schema %}
{
  "name": "slideshow",
  "blocks":[
    {
      "name": "Image",
      "type": "slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "sliderimg",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "slidertext",
          "label": "Text"
        },
        {
          "id": "text-cta",
          "type": "text",
          "label": "CTA TEXT"
        },
        {
          "id": "cta_link",
          "type": "url",
          "label": "Button link"
        },
        {
          "type": "header",
          "content": "Caption Position"
        },
        {
          "type": "range",
          "id": "position_hor",
          "label": "Horizontal Box Position Desktop",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 70,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "position_ver",
          "label": "vertical Box Position Desktop",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "position_hor_mob",
          "label": "Horizontal Box Position Mobile",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "position_ver_mob",
          "label": "vertical Box Position Mobile",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "position_hor_tab",
          "label": "Horizontal Box Position Tab",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "position_ver_tab",
          "label": "vertical Box Position Tab",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50,
          "unit": "%"
        }
      ]
    }
  ]
}
{% endschema %}